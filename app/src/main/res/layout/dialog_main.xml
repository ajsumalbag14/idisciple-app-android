<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/margin_big">

    <com.yondu.parkingbuddy.widgets.fonts.CustomComfortaaBoldTextView
        android:id="@+id/tvDialogHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/margin_small"
        android:text="@string/dialog_error_title_no_internet"
        android:textColor="@color/colorText"
        android:textSize="18sp" />

    <com.ph.idisciple.idiscipleapp.widgets.fonts.CustomMontserratSemiBoldTextView
        android:id="@+id/tvDialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_normal"
        android:gravity="center"
        android:text="@string/dialog_error_message_no_internet"
        android:textColor="@color/colorTextGray"
        android:textSize="15sp" />

    <com.ph.idisciple.idiscipleapp.widgets.fonts.CustomMontserratBoldButton
        android:id="@+id/bConfirm"
        style="@style/MainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/margin_big"
        android:paddingStart="@dimen/margin_big"
        android:text="@android:string/ok" />
</LinearLayout>