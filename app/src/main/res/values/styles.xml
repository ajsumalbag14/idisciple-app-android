<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/shape_button_main</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:filterTouchesWhenObscured">true</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MainMenuButtonLinearLayout">
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/margin_small</item>
    </style>

    <style name="MainMenuButtonText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NavDrawerItemTitle">
        <item name="android:textColor">@color/colorTextNavDrawerMenu</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavDrawerTextOnly">
        <item name="android:paddingTop">@dimen/margin_very_small</item>
        <item name="android:paddingBottom">@dimen/margin_very_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorTextNavDrawerMenu</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
