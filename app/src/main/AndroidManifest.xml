<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ph.idisciple.idiscipleapp">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".app.IDiscipleApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.splashscreen.SplashScreenActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.forgotpassword.ForgotPasswordScreenActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.mainappscreen.MainAppScreenActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.login.LoginScreenActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.firsttimeuser.FirstTimeUserScreenActivity"
            android:screenOrientation="portrait" />

        <!-- Custom Dialogs -->
        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name=".ui.mainappscreen.speakerfragment.SpeakerInfoDialogActivity" />

        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name=".ui.mainappscreen.workshopfragment.WorkshopInfoDialogActivity" />

        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name=".ui.mainappscreen.communityfragment.ShowProfileInfoDialogActivity" />

        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name=".ui.mainappscreen.communityfragment.yourprofiledialog.YourProfileInfoDialogActivity" />

        <activity
            android:screenOrientation="portrait"
            android:name=".ui.mainappscreen.viewmap.ViewMapActivity" />

        <activity
            android:screenOrientation="portrait"
            android:name=".ui.mainappscreen.morefragment.resourcestab.ViewResourceActivity" />

    </application>

</manifest>